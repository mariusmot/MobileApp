<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotMariusLab7.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">
            <Image
                Source="marius_mot.jpeg"
                HeightRequest="200"
                HorizontalOptions="Center"
                SemanticProperties.Description="Imagine profil student" />

            <Label
                Text="Student Mot Marius"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Student anul 3, Informatica Economica - ID"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Descriere Student" />

            <Button
                x:Name="CounterBtn"
                Text="Numar accesari: 0" 
                SemanticProperties.Hint="Numara de cate ori dai click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
